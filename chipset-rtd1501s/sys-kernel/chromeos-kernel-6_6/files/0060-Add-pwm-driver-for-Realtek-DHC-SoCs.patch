From 905e3ed4f318338327d24fe63eb8038e87d7e3bc Mon Sep 17 00:00:00 2001
From: James Tai <james.tai@realtek.com>
Date: Thu, 17 Nov 2022 15:51:14 +0800
Subject: [PATCH] pwm: add pwm driver for Realtek DHC SoCs

Change-Id: I30c76b8d79a1b5e59d3f214a1e24573b39d88251
---
 drivers/pwm/Kconfig  | 7 +++++++
 drivers/pwm/Makefile | 1 +
 2 files changed, 8 insertions(+)

--- a/drivers/pwm/Kconfig
+++ b/drivers/pwm/Kconfig
@@ -514,6 +514,13 @@
 	  To compile this driver as a module, choose M here: the module
 	  will be called pwm-rz-mtu3.
 
+config PWM_RTK
+	tristate "Realtek PWM support"
+	depends on ARCH_REALTEK
+	default n
+	help
+	  Say Y, if you want to enable PWM feature on Realtek platform.
+
 config PWM_SAMSUNG
 	tristate "Samsung PWM support"
 	depends on PLAT_SAMSUNG || ARCH_S5PV210 || ARCH_EXYNOS || COMPILE_TEST
--- a/drivers/pwm/Makefile
+++ b/drivers/pwm/Makefile
@@ -46,6 +46,7 @@
 obj-$(CONFIG_PWM_RCAR)		+= pwm-rcar.o
 obj-$(CONFIG_PWM_RENESAS_TPU)	+= pwm-renesas-tpu.o
 obj-$(CONFIG_PWM_ROCKCHIP)	+= pwm-rockchip.o
+obj-$(CONFIG_PWM_RTK)		+= pwm-rtk.o
 obj-$(CONFIG_PWM_RZ_MTU3)	+= pwm-rz-mtu3.o
 obj-$(CONFIG_PWM_SAMSUNG)	+= pwm-samsung.o
 obj-$(CONFIG_PWM_SIFIVE)	+= pwm-sifive.o
