From 4c0ac740c6f56ff0d04122e370a19ca6d4bd4401 Mon Sep 17 00:00:00 2001
From: James Tai <james.tai@realtek.com>
Date: Thu, 10 Nov 2022 17:29:53 +0800
Subject: [PATCH] irqchip: add irq mux driver for Realtek DHC SoCs

Change-Id: Ice1fdc02426ba7bc8030fe49a07e25e07eced038
---
 drivers/irqchip/Kconfig           |   6 +
 drivers/irqchip/Makefile          |   1 +
 2 files changed, 801 insertions(+)
 create mode 100644 drivers/irqchip/irq-realtek-mux.c

--- a/drivers/irqchip/Kconfig
+++ b/drivers/irqchip/Kconfig
@@ -218,6 +218,17 @@
 	bool
 	select IRQ_DOMAIN
 
+config REALTEK_DHC_INTC
+	tristate "Realtek DHC SoC family interrupt controller"
+	depends on ARCH_REALTEK
+	default ARCH_REALTEK
+	select IRQ_DOMAIN
+
+config REALTEK_DHC_INTC_DISPATCHER
+       tristate "Realtek DHC SoC family interrupt dispatcher"
+       depends on ARCH_REALTEK
+       select IRQ_DOMAIN
+
 config RENESAS_INTC_IRQPIN
 	bool "Renesas INTC External IRQ Pin Support" if COMPILE_TEST
 	select IRQ_DOMAIN
--- a/drivers/irqchip/Makefile
+++ b/drivers/irqchip/Makefile
@@ -47,6 +47,8 @@
 obj-$(CONFIG_IXP4XX_IRQ)		+= irq-ixp4xx.o
 obj-$(CONFIG_JCORE_AIC)			+= irq-jcore-aic.o
 obj-$(CONFIG_RDA_INTC)			+= irq-rda-intc.o
+obj-$(CONFIG_REALTEK_DHC_INTC)		+= irq-realtek-mux.o
+obj-$(CONFIG_REALTEK_DHC_INTC_DISPATCHER)              += irq-realtek-dispatcher.o
 obj-$(CONFIG_RENESAS_INTC_IRQPIN)	+= irq-renesas-intc-irqpin.o
 obj-$(CONFIG_RENESAS_IRQC)		+= irq-renesas-irqc.o
 obj-$(CONFIG_RENESAS_RZA1_IRQC)		+= irq-renesas-rza1.o
