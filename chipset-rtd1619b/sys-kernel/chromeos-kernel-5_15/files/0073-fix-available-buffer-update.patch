 CONFIG_MALI_DEVFREQ=y
 CONFIG_MALI_MIDGARD_ENABLE_TRACE=y
 CONFIG_VIDEO_VCODEC_RTD16XXB=m
+CONFIG_SOUND=y
+CONFIG_SND=y
