---
 drivers/hwspinlock/Kconfig  | 8 ++++++++
 drivers/hwspinlock/Makefile | 1 +
 2 files changed, 9 insertions(+)

diff --git a/drivers/hwspinlock/Kconfig b/drivers/hwspinlock/Kconfig
index 3874d15b0e9b..4ca1a2bc4984 100644
--- a/drivers/hwspinlock/Kconfig
+++ b/drivers/hwspinlock/Kconfig
@@ -63,4 +63,12 @@ config HSEM_U8500
 
 	  If unsure, say N.
 
+config HWSPINLOCK_RTK
+	tristate "Realtek Hardware Spinlock device"
+	depends on ARCH_REALTEK || COMPILE_TEST
+	help
+	  Say y here to support the Realtek Hardware Spinlock.
+
+	  If unsure, say N.
+
 endif # HWSPINLOCK
diff --git a/drivers/hwspinlock/Makefile b/drivers/hwspinlock/Makefile
index a0f16c9aaa82..5340f7f43424 100644
--- a/drivers/hwspinlock/Makefile
+++ b/drivers/hwspinlock/Makefile
@@ -10,3 +10,4 @@ obj-$(CONFIG_HWSPINLOCK_SPRD)		+= sprd_hwspinlock.o
 obj-$(CONFIG_HWSPINLOCK_STM32)		+= stm32_hwspinlock.o
 obj-$(CONFIG_HWSPINLOCK_SUN6I)		+= sun6i_hwspinlock.o
 obj-$(CONFIG_HSEM_U8500)		+= u8500_hsem.o
+obj-$(CONFIG_HWSPINLOCK_RTK)		+= rtk_hwspinlock.o
