From: James Tai <james.tai@realtek.com>
Date: Wed, 16 Nov 2022 22:16:41 +0800
Subject: [PATCH 13/80] iio: adc: add lsadc driver for Realtek DHC SoCs

Change-Id: If9a2eb86659d2617fee9b82fcfed404e7982ea74
---
 drivers/iio/adc/Kconfig  | 8 ++++++++
 drivers/iio/adc/Makefile | 1 +
 2 files changed, 9 insertions(+)

diff --git a/drivers/iio/adc/Kconfig b/drivers/iio/adc/Kconfig
index 86b83dc7b7d9..0a951eb235aa 100644
--- a/drivers/iio/adc/Kconfig
+++ b/drivers/iio/adc/Kconfig
@@ -751,6 +751,14 @@ config MESON_SARADC
 	  To compile this driver as a module, choose M here: the
 	  module will be called meson_saradc.
 
+config RTK_LSADC0
+	tristate "Realtek LSADC driver"
+	depends on ARCH_REALTEK
+	default n
+	help
+	  Say Y, if you want to enable LSADC feature on Realtek RTD129x,
+	  RTD139x, RTD16xx, RTD13xx, or RTD16xxb platform.
+
 config MP2629_ADC
 	tristate "Monolithic MP2629 ADC driver"
 	depends on MFD_MP2629
diff --git a/drivers/iio/adc/Makefile b/drivers/iio/adc/Makefile
index 13668c4cfbaf..4d6f5fdd6563 100644
--- a/drivers/iio/adc/Makefile
+++ b/drivers/iio/adc/Makefile
@@ -82,6 +82,7 @@ obj-$(CONFIG_QCOM_PM8XXX_XOADC) += qcom-pm8xxx-xoadc.o
 obj-$(CONFIG_RCAR_GYRO_ADC) += rcar-gyroadc.o
 obj-$(CONFIG_RN5T618_ADC) += rn5t618-adc.o
 obj-$(CONFIG_ROCKCHIP_SARADC) += rockchip_saradc.o
+obj-$(CONFIG_RTK_LSADC0) += rtk_lsadc0.o
 obj-$(CONFIG_RZG2L_ADC) += rzg2l_adc.o
 obj-$(CONFIG_SC27XX_ADC) += sc27xx_adc.o
 obj-$(CONFIG_SPEAR_ADC) += spear_adc.o
